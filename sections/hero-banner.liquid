<section class="hero-banner full-width">
  <div class="hero-banner__background">
    {%- if section.settings.background_image != blank -%}
      <img 
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        alt="{{ section.settings.headline | escape }}"
        class="hero-banner__bg-image"
        loading="eager"
      >
    {%- endif -%}
    <div class="hero-banner__overlay"></div>
  </div>

  <div class="hero-banner__container">
    <div class="hero-banner__content">
      <div class="hero-banner__text">
        {%- if section.settings.badge_text != blank -%}
          <div class="hero-badge">
            <span class="hero-badge__text">{{ section.settings.badge_text }}</span>
            <span class="hero-badge__icon">üî•</span>
          </div>
        {%- endif -%}

        <h1 class="hero-banner__headline">
          {{ section.settings.headline | default: 'Premium Vapes Delivered to Your Door' }}
        </h1>

        <p class="hero-banner__subheading">
          {{ section.settings.subheading | default: 'High-quality devices, e-liquids & accessories at the best prices' }}
        </p>

        {%- if section.settings.features_list != blank -%}
          <ul class="hero-banner__features">
            {%- assign features = section.settings.features_list | split: ',' -%}
            {%- for feature in features limit: 3 -%}
              <li class="hero-feature">
                <svg class="hero-feature__icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
                <span>{{ feature | strip }}</span>
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}

        <div class="hero-banner__actions">
          {%- if section.settings.primary_button_text != blank -%}
            <a href="{{ section.settings.primary_button_url | default: '/collections/all' }}" class="hero-btn hero-btn--primary">
              <span>{{ section.settings.primary_button_text | default: 'Shop Now' }}</span>
              <svg class="hero-btn__icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
              </svg>
            </a>
          {%- endif -%}

          {%- if section.settings.secondary_button_text != blank -%}
            <a href="{{ section.settings.secondary_button_url | default: '/collections/e-liquids' }}" class="hero-btn hero-btn--secondary">
              <span>{{ section.settings.secondary_button_text | default: 'Browse Flavors' }}</span>
              <svg class="hero-btn__icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z"/>
              </svg>
            </a>
          {%- endif -%}
        </div>

        {%- if section.settings.show_trust_signals -%}
          <div class="hero-banner__trust">
            <div class="trust-signal">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
              </svg>
              <span>{{ section.settings.trust_1 | default: 'Secure Checkout' }}</span>
            </div>
            <div class="trust-signal">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M13 3c-4.97 0-9 4.03-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42C8.27 19.99 10.51 21 13 21c4.97 0 9-4.03 9-9s-4.03-9-9-9z"/>
              </svg>
              <span>{{ section.settings.trust_2 | default: 'Free Shipping $50+' }}</span>
            </div>
            <div class="trust-signal">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2l3.09 6.26L22 9l-5 4.87 1.18 6.88L12 17.77l-6.18 3.26L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <span>{{ section.settings.trust_3 | default: '5-Star Reviews' }}</span>
            </div>
          </div>
        {%- endif -%}
      </div>

      <div class="hero-banner__media">
        {%- if section.settings.show_promotional_deal -%}
          <div class="promo-banner">
            <div class="promo-banner__content">
              <span class="promo-banner__label">{{ section.settings.promo_label | default: 'Limited Time' }}</span>
              <span class="promo-banner__offer">{{ section.settings.promo_offer | default: '30% OFF' }}</span>
              <span class="promo-banner__details">{{ section.settings.promo_details | default: 'All E-Liquids' }}</span>
            </div>
            <div class="promo-banner__sparkles">
              <div class="sparkle sparkle--1">‚ú®</div>
              <div class="sparkle sparkle--2">üíé</div>
              <div class="sparkle sparkle--3">‚≠ê</div>
            </div>
          </div>
        {%- endif -%}

        {%- if section.settings.hero_product_image != blank -%}
          <div class="hero-product">
            <img 
              src="{{ section.settings.hero_product_image | image_url: width: 600 }}"
              alt="Featured Product"
              class="hero-product__image"
              loading="eager"
            >
            <div class="hero-product__glow"></div>
          </div>
        {%- endif -%}

        {%- if section.settings.show_floating_elements -%}
          <div class="floating-elements">
            <div class="floating-element floating-element--1">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 8 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z"/>
              </svg>
            </div>
            <div class="floating-element floating-element--2">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2l3.09 6.26L22 9l-5 4.87 1.18 6.88L12 17.77l-6.18 3.26L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
            <div class="floating-element floating-element--3">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M9 11H7v3h2v-3zm4 0h-2v3h2v-3zm4 0h-2v3h2v-3zm2-7h-1V2h-2v2H8V2H6v2H5c-1.1 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"/>
              </svg>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>

    {%- if section.settings.show_scroll_indicator -%}
      <div class="scroll-indicator">
        <div class="scroll-indicator__text">Scroll to explore</div>
        <div class="scroll-indicator__arrow">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M7.41 8.84L12 13.42l4.59-4.58L18 10.25l-6 6-6-6z"/>
          </svg>
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
.hero-banner {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  overflow: hidden;
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
}

.hero-banner__background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.hero-banner__bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.3;
}

.hero-banner__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 30% 20%, rgba(0, 234, 255, 0.15) 0%, transparent 50%),
    radial-gradient(circle at 70% 80%, rgba(226, 0, 255, 0.15) 0%, transparent 50%),
    linear-gradient(135deg, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.5) 100%);
}

.hero-banner__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
  position: relative;
  z-index: 2;
  width: 100%;
}

.hero-banner__content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
  min-height: 80vh;
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: linear-gradient(135deg, #ff006e, #e200ff);
  color: #fff;
  padding: 0.5rem 1.5rem;
  border-radius: 2rem;
  font-size: 0.9rem;
  font-weight: 700;
  text-transform: uppercase;
  margin-bottom: 2rem;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.hero-banner__headline {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 900;
  color: #fff;
  margin-bottom: 1.5rem;
  line-height: 1.1;
  background: linear-gradient(135deg, #fff, #00eaff, #e200ff);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 0 40px rgba(0, 234, 255, 0.3);
}

.hero-banner__subheading {
  font-size: 1.25rem;
  color: #b4eaff;
  margin-bottom: 2rem;
  line-height: 1.6;
  max-width: 500px;
}

.hero-banner__features {
  list-style: none;
  padding: 0;
  margin: 0 0 2.5rem 0;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.hero-feature {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  color: #00eaff;
  font-weight: 600;
}

.hero-feature__icon {
  width: 20px;
  height: 20px;
  color: #00eaff;
  flex-shrink: 0;
}

.hero-banner__actions {
  display: flex;
  gap: 1rem;
  margin-bottom: 2.5rem;
  flex-wrap: wrap;
}

.hero-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 2rem;
  border-radius: 0.75rem;
  text-decoration: none;
  font-weight: 700;
  font-size: 1.1rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.hero-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.hero-btn:hover::before {
  left: 100%;
}

.hero-btn--primary {
  background: linear-gradient(135deg, #00eaff, #0066cc);
  color: #000;
  box-shadow: 0 8px 30px rgba(0, 234, 255, 0.4);
}

.hero-btn--primary:hover {
  background: linear-gradient(135deg, #00eaff, #0080ff);
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(0, 234, 255, 0.6);
}

.hero-btn--secondary {
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
  border: 2px solid rgba(226, 0, 255, 0.5);
  backdrop-filter: blur(10px);
}

.hero-btn--secondary:hover {
  background: rgba(226, 0, 255, 0.2);
  border-color: rgba(226, 0, 255, 0.8);
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(226, 0, 255, 0.3);
}

.hero-btn__icon {
  width: 20px;
  height: 20px;
  transition: transform 0.3s ease;
}

.hero-btn:hover .hero-btn__icon {
  transform: translateX(4px);
}

.hero-banner__trust {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
}

.trust-signal {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #b4eaff;
  font-size: 0.9rem;
  font-weight: 600;
}

.trust-signal svg {
  width: 18px;
  height: 18px;
  color: #00ff88;
}

.hero-banner__media {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.promo-banner {
  position: absolute;
  top: -2rem;
  right: -1rem;
  background: linear-gradient(135deg, #ff006e, #e200ff);
  color: #fff;
  padding: 1.5rem;
  border-radius: 1.5rem;
  text-align: center;
  transform: rotate(15deg);
  animation: float 3s ease-in-out infinite;
  z-index: 3;
  box-shadow: 0 10px 30px rgba(226, 0, 255, 0.4);
}

@keyframes float {
  0%, 100% { transform: rotate(15deg) translateY(0px); }
  50% { transform: rotate(15deg) translateY(-10px); }
}

.promo-banner__label {
  display: block;
  font-size: 0.8rem;
  text-transform: uppercase;
  opacity: 0.9;
}

.promo-banner__offer {
  display: block;
  font-size: 2rem;
  font-weight: 900;
  margin: 0.25rem 0;
}

.promo-banner__details {
  display: block;
  font-size: 0.9rem;
  opacity: 0.9;
}

.promo-banner__sparkles {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.sparkle {
  position: absolute;
  animation: sparkle 2s ease-in-out infinite;
}

.sparkle--1 {
  top: -0.5rem;
  left: -0.5rem;
  animation-delay: 0s;
}

.sparkle--2 {
  top: -0.5rem;
  right: -0.5rem;
  animation-delay: 0.5s;
}

.sparkle--3 {
  bottom: -0.5rem;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 1s;
}

@keyframes sparkle {
  0%, 100% { opacity: 0; transform: scale(0.5); }
  50% { opacity: 1; transform: scale(1); }
}

.hero-product {
  position: relative;
  z-index: 2;
}

.hero-product__image {
  width: 100%;
  max-width: 500px;
  height: auto;
  filter: drop-shadow(0 20px 40px rgba(0, 234, 255, 0.3));
  animation: productFloat 4s ease-in-out infinite;
}

@keyframes productFloat {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

.hero-product__glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, rgba(0, 234, 255, 0.3) 0%, transparent 70%);
  border-radius: 50%;
  animation: glow 3s ease-in-out infinite alternate;
}

@keyframes glow {
  from { opacity: 0.5; transform: translate(-50%, -50%) scale(0.8); }
  to { opacity: 1; transform: translate(-50%, -50%) scale(1.2); }
}

.floating-elements {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.floating-element {
  position: absolute;
  color: rgba(0, 234, 255, 0.6);
  animation: floatRotate 6s ease-in-out infinite;
}

.floating-element svg {
  width: 30px;
  height: 30px;
}

.floating-element--1 {
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.floating-element--2 {
  top: 60%;
  right: 15%;
  animation-delay: 2s;
  color: rgba(226, 0, 255, 0.6);
}

.floating-element--3 {
  bottom: 30%;
  left: 20%;
  animation-delay: 4s;
}

@keyframes floatRotate {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-15px) rotate(120deg); }
  66% { transform: translateY(10px) rotate(240deg); }
}

.scroll-indicator {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  color: #b4eaff;
  animation: bounce 2s infinite;
}

.scroll-indicator__text {
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
  opacity: 0.8;
}

.scroll-indicator__arrow svg {
  width: 24px;
  height: 24px;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
  40% { transform: translateX(-50%) translateY(-10px); }
  60% { transform: translateX(-50%) translateY(-5px); }
}

/* Responsive Design */
@media (max-width: 768px) {
  .hero-banner {
    min-height: 90vh;
  }
  
  .hero-banner__container {
    padding: 0 1rem;
  }
  
  .hero-banner__content {
    grid-template-columns: 1fr;
    gap: 2rem;
    text-align: center;
  }
  
  .hero-banner__headline {
    font-size: 2.5rem;
  }
  
  .hero-banner__actions {
    justify-content: center;
  }
  
  .hero-btn {
    padding: 0.875rem 1.5rem;
    font-size: 1rem;
  }
  
  .hero-banner__trust {
    justify-content: center;
    gap: 1rem;
  }
  
  .promo-banner {
    position: static;
    transform: none;
    margin-bottom: 2rem;
    animation: none;
  }
  
  .floating-elements {
    display: none;
  }
}

@media (max-width: 480px) {
  .hero-banner__headline {
    font-size: 2rem;
  }
  
  .hero-banner__subheading {
    font-size: 1.1rem;
  }
  
  .hero-banner__actions {
    flex-direction: column;
    align-items: center;
  }
  
  .hero-btn {
    width: 100%;
    max-width: 280px;
    justify-content: center;
  }
  
  .hero-banner__trust {
    flex-direction: column;
    gap: 0.75rem;
  }
}
{% endstylesheet %}

